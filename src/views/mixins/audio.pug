mixin audio(audio)
            div#playingCover.playingCover
                img.playingCover__img(src='https://i1.sndcdn.com/avatars-sn8HgEgiucAccV0D-yogYJA-t240x240.jpg')
            div
               audio.hidden(controls autoplay)
            div.nowPlaying
                div.playingInfo
                    h1.playingTitle 
                    h1 &nbsp-&nbsp
                    h1.playingSinger 
                div.audioControls__volume
                    span#mute
                        i.fas.fa-volume-up
                    input#volume(type="range",step="0.1", value=0.5, min="0", max="1")
            div.audioControls__time
                span#currentTime.timePosition 00:00
                button#prevBtn
                    i.fas.fa-step-backward
                button#playBtn
                    i.fas.fa-play
                button#nextBtn
                    i.fas.fa-step-forward        
                span#totalTime.timePosition 00:00
            input#timeline(type='range', step='1', value='0', min='0')